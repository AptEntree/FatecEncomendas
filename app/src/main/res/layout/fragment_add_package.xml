<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp"
    android:paddingTop="16dp"
    android:background="#8EC1F5">

    <TextView
        android:id="@+id/tv_exit_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_exit"
        android:drawablePadding="10dp"
        android:text="Exit"/>

    <Spinner
        android:id="@+id/sp_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_add"
        app:layout_constraintBottom_toTopOf="@id/bt_add_package"/>

    <Button
        android:id="@+id/bt_add_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonStyle"
        android:text="Add new package"
        app:layout_constraintTop_toBottomOf="@id/sp_users"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>